generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  role      String   // 'VET', 'CLIENT', 'ADMIN'
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  horsesOwned    Horse[]         @relation("HorseOwner")
  horsesVet      Horse[]         @relation("HorseVet")
  medicalRecords MedicalRecord[]
}

model Horse {
  id              String   @id @default(uuid())
  passportNumber  String   @unique
  name            String
  breed           String
  color           String
  dateOfBirth     DateTime
  gender          String   // 'MALE', 'FEMALE', 'GELDING'
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  ownerId         String
  vetId           String
  owner           User     @relation("HorseOwner", fields: [ownerId], references: [id])
  vet             User     @relation("HorseVet", fields: [vetId], references: [id])
  
  medicalRecords  MedicalRecord[]
  vaccinations    Vaccination[]
  labTests        LabTest[]
}

model MedicalRecord {
  id        String   @id @default(uuid())
  date      DateTime
  diagnosis String
  treatment String
  notes     String?
  createdAt DateTime @default(now())
  
  horseId   String
  vetId     String
  horse     Horse   @relation(fields: [horseId], references: [id])
  vet       User    @relation(fields: [vetId], references: [id])
}

model Vaccination {
  id        String   @id @default(uuid())
  vaccine   String
  date      DateTime
  nextDue   DateTime
  notes     String?
  createdAt DateTime @default(now())
  
  horseId   String
  horse     Horse @relation(fields: [horseId], references: [id])
}

model LabTest {
  id        String   @id @default(uuid())
  testType  String
  date      DateTime
  result    String
  notes     String?
  createdAt DateTime @default(now())
  
  horseId   String
  horse     Horse @relation(fields: [horseId], references: [id])
}
